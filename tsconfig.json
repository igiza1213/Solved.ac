{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "preserveValueImports": false,
      "lib": ["ESNext", "ESNext.Array"],
      "outDir": "./out",
      "rootDir": "./src",
      "downlevelIteration": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "ts-node": {
      "esm": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts"]
  }
  